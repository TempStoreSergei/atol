# ============================================
# MULTI-DEVICE CONFIGURATION
# ============================================

# Список устройств (через запятую)
# По умолчанию: "default" - одно устройство
# Для нескольких: "kassa1,kassa2,kassa3"
DEVICES=default

# Конфигурация для устройства "default"
DEVICE_default_TYPE=tcp
DEVICE_default_HOST=192.168.1.100
DEVICE_default_PORT=5555

# Пример конфигурации для нескольких устройств:
# DEVICES=kassa1,kassa2,kassa3
#
# # Касса 1 - TCP
# DEVICE_kassa1_TYPE=tcp
# DEVICE_kassa1_HOST=192.168.1.100
# DEVICE_kassa1_PORT=5555
#
# # Касса 2 - TCP
# DEVICE_kassa2_TYPE=tcp
# DEVICE_kassa2_HOST=192.168.1.101
# DEVICE_kassa2_PORT=5555
#
# # Касса 3 - USB
# DEVICE_kassa3_TYPE=usb
# DEVICE_kassa3_HOST=
# DEVICE_kassa3_PORT=


# ============================================
# REDIS CONFIGURATION
# ============================================

REDIS_HOST=localhost
REDIS_PORT=6379


# ============================================
# ATOL DRIVER SETTINGS (для fallback)
# ============================================

# Путь к драйверу libfptr10 (если не в системных путях)
ATOL_DRIVER_PATH=

# Тип подключения по умолчанию: tcp, usb, serial, bluetooth
ATOL_CONNECTION_TYPE=tcp

# TCP/IP подключение по умолчанию
ATOL_HOST=192.168.1.100
ATOL_PORT=5555

# Serial подключение (если используется)
ATOL_SERIAL_PORT=COM3
ATOL_BAUDRATE=115200


# ============================================
# COMPANY DATA
# ============================================

COMPANY_INN=1234567890
COMPANY_PAYMENT_ADDRESS=г. Москва, ул. Примерная, д. 1
COMPANY_EMAIL=info@company.ru
CASHIER_NAME=Иванов И.И.


# ============================================
# API SERVER SETTINGS
# ============================================

API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=false


# ============================================
# PATHS
# ============================================

LOG_DIR=logs
CACHE_DIR=data/cache
RECEIPTS_DIR=data/receipts
